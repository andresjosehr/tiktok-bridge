# Server Configuration
PORT=3000
NODE_ENV=development

# TikTok Configuration
TIKTOK_USERNAME=your_tiktok_username
TIKTOK_MAX_RECONNECT_ATTEMPTS=5
TIKTOK_RECONNECT_DELAY=5000

# Garry's Mod Configuration
GMOD_HOST=localhost
GMOD_WS_PORT=27015
GMOD_HTTP_PORT=27016
GMOD_RECONNECT_INTERVAL=10000

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_DATABASE=garrys_tiktok
DB_PORT=3306
DB_CONNECTION_LIMIT=10
DB_SSL=false

# Queue Configuration
QUEUE_ENABLED=true
QUEUE_MAX_SIZE=1000
QUEUE_BATCH_SIZE=1
QUEUE_PROCESSING_DELAY=100
QUEUE_MAX_ATTEMPTS=3
QUEUE_MAX_RETRY_DELAY=300
QUEUE_AUTO_START=true
QUEUE_CLEANUP_INTERVAL=3600000
QUEUE_OPTIMIZATION_INTERVAL=1800000
QUEUE_ENABLED_PROCESSORS=dinochrome

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# AI Configuration
AI_ENABLED=false
AI_DEFAULT_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.7
OPENAI_SYSTEM_PROMPT=You are a helpful assistant for a TikTok live stream.

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_MAX_TOKENS=150

# Google AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key
GOOGLE_AI_MODEL=gemini-pro
GOOGLE_AI_MAX_TOKENS=150
GOOGLE_AI_TEMPERATURE=0.7

# Local AI Configuration
LOCAL_AI_ENDPOINT=http://localhost:11434
LOCAL_AI_API_KEY=your_local_ai_api_key
LOCAL_AI_MODEL=llama2
LOCAL_AI_MAX_TOKENS=150
LOCAL_AI_TEMPERATURE=0.7

# TTS Configuration
TTS_ENABLED=false
TTS_DEFAULT_PROVIDER=elevenlabs

# ElevenLabs Configuration
